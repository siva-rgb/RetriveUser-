<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#203A43"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:src="@drawable/login" />

    <EditText

        android:id="@+id/login_name"
        android:layout_width="347dp"
        android:layout_height="49dp"
        android:layout_below="@id/login_image"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_adb_black_24dp"
        android:ems="10"
        android:hint=" Email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@id/login_name"
        android:layout_alignStart="@id/login_name"
        android:layout_alignLeft="@id/login_name"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="30dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_enhanced_encryption_password"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_Login"
        android:textAllCaps="false"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="Login"
        android:textColor="#fff"
        android:background="@drawable/costum_button"
        android:layout_below="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />
    <TextView
        android:id="@+id/signUp"
        android:layout_below="@id/btn_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>